class Solution:
    def countMaxOrSubsets(self, nums):
        n = len(nums)
        max_or = 0
        for num in nums:
            max_or |= num  # compute maximum OR
        
        count = 0

        def backtrack(i, curr_or):
            nonlocal count
            if i == n:
                if curr_or == max_or:
                    count += 1
                return
            
            # include nums[i]
            backtrack(i+1, curr_or | nums[i])
            # exclude nums[i]
            backtrack(i+1, curr_or)
        
        backtrack(0, 0)
        return count
