class Solution:
    def applyOperations(self, nums):
        n = len(nums)
        
        # Step 1: apply operations sequentially
        for i in range(n - 1):
            if nums[i] == nums[i + 1] and nums[i] != 0:
                nums[i] *= 2
                nums[i + 1] = 0
        
        # Step 2: move zeros to the end
        result = [x for x in nums if x != 0]  # keep non-zero elements
        result.extend([0] * (n - len(result)))  # add missing zeros
        
        return result
