class Solution(object):
    def numberOfWays(self, n, x):
        """
        :type n: int
        :type x: int
        :rtype: int
        """
        dp = [0] * (n + 1)
        dp[0] = 1
        
        i = 1
        while i ** x <= n:
            power = i ** x
            for j in range(n, power - 1, -1):
                dp[j] = (dp[j] + dp[j - power]) % (10**9 + 7)
            i += 1
        
        return dp[n]
