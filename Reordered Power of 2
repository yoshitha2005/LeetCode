class Solution:
    def reorderedPowerOf2(self, n: int) -> bool:
        def count_digits(x):
            return tuple(sorted(str(x)))  # "Fingerprint" of the number's digits

        target = count_digits(n)

        for i in range(31):  # Only need up to 2^30 for n <= 10^9
            if target == count_digits(1 << i):
                return True
        return False
